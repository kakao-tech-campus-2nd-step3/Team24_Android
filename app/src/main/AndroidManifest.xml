<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ChallengeOnAir"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChallengeOnAirAndroid"
        tools:targetApi="31">

        <activity
            android:name=".view.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ChallengeOnAirAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.challenge.OngoingChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.ChallengeRoomInfoActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.CreateChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageHistoryActivity"
            android:exported="false" />

    </application>

</manifest>