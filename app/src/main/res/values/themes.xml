<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ChallengeOnAir.Splash" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">#FFF9FAFB</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
    <item name="postSplashScreenTheme">@style/Theme.ChallengeOnAirAndroid</item>
    </style>

    <style name="Theme.ChallengeOnAirAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomPickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_red</item>
        <item name="colorControlActivated">@color/main_red</item>
        <item name="colorControlHighlight">@color/main_red</item>
        <item name="android:colorBackground">@color/sub_red</item>
        <item name="android:calendarTextColor">@color/main_red</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/main_red</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerSize">16dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:headerBackground">@color/main_red</item>
    </style>

</resources>