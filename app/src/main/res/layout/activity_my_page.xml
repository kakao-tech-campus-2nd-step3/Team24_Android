<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.mypage.MyPageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/llUserProfile"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/search_description"
                android:src="@drawable/ic_search"
                app:layout_constraintEnd_toStartOf="@+id/ibHome"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/ibHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/home_description"
                android:src="@drawable/ic_home"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cslIcon"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sample_user_profile"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/user_profile_description" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/user_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnProfileChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sub_red"
                    android:textColor="@color/main_red"
                    android:text="@string/my_profile"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:id="@+id/glPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:rowCount="1"
            android:columnCount="3"
            android:background="@color/background_gray"
            app:layout_constraintTop_toBottomOf="@id/llUserProfile"
            app:layout_constraintBottom_toTopOf="@+id/glChallengeList"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/point"
                android:textColor="@color/text_gray"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical" />

            <!-- tvPoint : 포인트 데이터 값 -->
            <TextView
                android:id="@+id/tvPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/point_value"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:background="@android:color/transparent"
                android:contentDescription="@string/point_description"
                android:src="@drawable/ic_chevron_right"
                tools:ignore="TouchTargetSizeCheck" />

        </GridLayout>

        <GridLayout
            android:id="@+id/glChallengeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:rowCount="2"
            android:columnCount="4"
            android:background="@color/background_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/glPoint"
            app:layout_constraintBottom_toTopOf="@id/llWaitingChallengeTitle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/try_challenge"
                android:textSize="13sp"
                android:layout_row="0"
                android:layout_column="0" />

            <!-- tvNumTry : 도전한 챌린지 수 데이터 값 -->
            <TextView
                android:id="@+id/tvNumTry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="0dp"
                android:text="@string/try_challenge_value"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/success_challenge"
                android:textSize="13sp"
                android:layout_row="0"
                android:layout_column="1" />

            <!-- tvNumSuccess : 성공한 챌린지 수 데이터 값 -->
            <TextView
                android:id="@+id/tvNumSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="0dp"
                android:text="@string/success_challenge_value"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/my_created_challenge"
                android:textSize="13sp"
                android:layout_row="0"
                android:layout_column="2" />

            <!-- tvMyCreated : 내가 만든 챌린지 수 데이터 값 -->
            <TextView
                android:id="@+id/tvMyCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="0dp"
                android:text="@string/my_creaated_challenge_value"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_row="1"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:background="@android:color/transparent"
                android:contentDescription="@string/history_description"
                android:src="@drawable/ic_chevron_right"
                tools:ignore="TouchTargetSizeCheck" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/llWaitingChallengeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/glChallengeList"
            app:layout_constraintBottom_toTopOf="@id/rvWaitingChallengeList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/waiting_challenge"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWaitingChallengeNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:hint="@string/waiting_challenge_value"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- rvWaitingChallengeList : 대기 중인 챌린지 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWaitingChallengeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            android:scrollbars="horizontal"
            tools:listitem="@layout/waiting_challenge_item"
            tools:itemCount="2"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/glChallengeList"
            app:layout_constraintBottom_toTopOf="@id/llCustomer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/llCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/rvWaitingChallengeList">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customer_service"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnQuestion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/my_page_button"
                    android:text="@string/frequently_asked_question"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btnAsk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/my_page_button"
                    android:text="@string/contact_us"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUserSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/llCustomer">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_setting"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnWithdraw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/my_page_button"
                    android:text="@string/delete_accout"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/my_page_button"
                    android:text="@string/log_out"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

